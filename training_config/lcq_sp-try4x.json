{
  "dataset_reader": {
    "type": "friction_q",
    "lazy": false,
    "sample": -1,
    "lf_syntax": "life_cycle_entities",
    "question_token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "vocabulary": {
    "non_padded_namespaces": ["actions"]
  },
  "train_data_path": "/inputs/LCQ-v1-textsplit/LCQ-v1-textsplit-train.jsonl",
  "validation_data_path": "/inputs/LCQ-v1-textsplit/LCQ-v1-textsplit-dev.jsonl",
  "model": {
    "type": "friction_q_parser",
    "use_entities": true,
    "num_linking_features": 0,
    "question_embedder": {
      "tokens": {
        "type": "embedding",
        "num_embeddings": 200000,
        "pretrained_file": "/glove/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "entity_similarity_mode": "weighted_dot_product",
    "action_embedding_dim": 50,
    "encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 50,
      "bidirectional": false,
      "num_layers": 1
    },
    "decoder_beam_search": {
      "beam_size": 5
    },
    "max_decoding_steps": 30,
    "attention_function": {"type": "dot_product"},
    "dropout": 0.2
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 1
  },
  "trainer": {
    "num_epochs": 100,
    "patience": 20,
    "validation_metric": "+parse_acc",
    "learning_rate_scheduler":  {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 10
    },
    "num_serialized_models_to_keep": 2,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam"
    }
  }
}
