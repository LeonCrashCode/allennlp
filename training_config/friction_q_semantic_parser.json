{
  "dataset_reader": {
    "type": "friction_q",
    "question_token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "vocabulary": {
    "non_padded_namespaces": ["actions"]
  },
  "train_data_path": "/Users/tafjord/data/friction-q-v2/friction-q-v2-train.jsonl",
  "validation_data_path": "/Users/tafjord/data/friction-q-v2/friction-q-v2-dev.jsonl",
  "model": {
    "type": "wikitables_parser",
    "question_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "/Users/tafjord/data/glove/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 20,
      "num_layers": 1
    },
    "decoder_trainer": {
      "type": "max_marginal_likelihood"
    },
    "decoder_beam_search": {
      "beam_size": 5
    },
    "max_decoding_steps": 30,
    "action_namespace": "actions",
    "action_embedding_dim": 20,
    "attention_function": {"type": "dot_product"}
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 1
  },
  "trainer": {
    "num_epochs": 100,
    "patience": 30,
    "validation_metric": "+parse_acc",
    "learning_rate_scheduler":  {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 4
    },
    "cuda_device": -1,
    "optimizer": {
      "type": "adam"
    }
  }
}
